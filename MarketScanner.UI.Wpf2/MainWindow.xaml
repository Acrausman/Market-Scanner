<Window x:Class="MarketScanner.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Market Scanner" Height="900" Width="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Price Chart -->
        <oxy:PlotView Model="{Binding PriceView}" Grid.Row="0" />

        <!-- RSI Chart -->
        <oxy:PlotView Model="{Binding RsiView}" Grid.Row="1" />

        <!-- Volume Chart -->
        <oxy:PlotView Model="{Binding VolumeView}" Grid.Row="2" />

        <StackPanel>
            <TextBlock Text="{Binding PriceText}" FontSize="16"/>
            <TextBlock Text="{Binding RsiText}" FontSize="16"/>
            <TextBlock Text="{Binding VolumeText}" FontSize="16"/>
            <TextBlock Text="{Binding SmaText}" FontSize="16"/>
        </StackPanel>
    </Grid>
    
    
</Window>
